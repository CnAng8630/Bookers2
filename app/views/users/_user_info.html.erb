<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
</div>

<div>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block mb-3" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: book do |f| %>
  <div class="form-group">
    <label for="inputTitle">Title</label>
    <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control mx-auto" %>

    <label for="inputOpinion" class="mt-2">Opinion</label>
    <%= f.text_area :body, autofocus: true, id:"inputOpinion", class: "form-control mx-auto" %>

    <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
  </div>
<% end %>
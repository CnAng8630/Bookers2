<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <p>name</p>
  <p><%= user.name %></p>
  <p>introduction</p>
  <p><%= user.introduction %></p>
</div>

<div>
  <%= link_to "Edit", edit_user_path(user) %>
</div>

<h2>New book</h2>
<%= form_with model: book do |f| %>
  <label for="inputTitle"><p>Title</p></label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>

  <label for="inputOpinion"><p>Opinion</p></label>
  <%= f.text_area :body, autofocus: true, id:"inputOpinion" %>

  <%= f.submit 'Create Book' %>
<% end %>
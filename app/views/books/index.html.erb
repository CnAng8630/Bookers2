<div>
  <h2>User info</h2>
  <% if @user.image.attached? %>
    <%= image_tag @user.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "100x100" %>
  <% end %>
  <p>name</p>
  <p><%= @user.name %></p>
  <p>introduction</p>
  <p><%= @user.introduction %></p>
</div>

<div>
  <%= link_to "Edit", edit_user_path(@user) %>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<% @books.each do |book| %>
  <%= image_tag book.
  <p>Title</p>
<div>
  <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name</p>
  <p><%= current_user.name %></p>
  <p>introduction</p>
  <p><%= current_user.introduction %></p>
</div>

<div>
  <%= link_to "Edit", edit_user_path(current_user) %>
</div>

<h2>New book</h2>
<%= form_with model: book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
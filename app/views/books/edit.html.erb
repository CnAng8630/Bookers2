<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>

  <label for="inputOpinion">Opinion</label>
  <%= f.text_area :body, autofocus: true, id:"inputOpinion" %>

  <%= f.submit "Update Book" %>
<% end %>

<p><%= link_to "Show", book_path(@book.id) %></p>
<p><%= link_to "Back", books_path %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control" %>

          <label for="inputOpinion" class="mt-3">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"inputOpinion", class: "form-control" %>

          <%= f.submit "Update Book", class: "btn btn-success mt-3" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path%>
    </div>
  </div>
</div>